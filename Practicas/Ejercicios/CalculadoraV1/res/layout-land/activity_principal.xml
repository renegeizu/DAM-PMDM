<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:gravity="right|center_vertical"
            android:text="0" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:onClick="limpiar"
                android:text="@string/btClear" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button2"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btCuatro" />

            <Button
                android:id="@+id/button3"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btCinco" />

            <Button
                android:id="@+id/button4"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btSeis" />

            <Button
                android:id="@+id/button5"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btSiete" />

            <Button
                android:id="@+id/button6"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btOcho" />

            <Button
                android:id="@+id/button7"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btNueve" />

            <Button
                android:id="@+id/button8"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="simbolos"
                android:text="@string/btDividir" />

            <Button
                android:id="@+id/button9"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="simbolos"
                android:text="@string/btMultiplicar" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button10"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btCero" />

            <Button
                android:id="@+id/button11"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btUno" />

            <Button
                android:id="@+id/button12"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btDos" />

            <Button
                android:id="@+id/button17"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="numeros"
                android:text="@string/btTres" />

            <Button
                android:id="@+id/button16"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="simbolos"
                android:text="@string/btPunto" />

            <Button
                android:id="@+id/button15"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="simbolos"
                android:text="@string/btIgual" />

            <Button
                android:id="@+id/button13"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="simbolos"
                android:text="@string/btRestar" />

            <Button
                android:id="@+id/button14"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:onClick="simbolos"
                android:text="@string/btSumar" />

        </LinearLayout>

    </TableRow>

</TableLayout>